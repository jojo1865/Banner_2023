
@{
    Layout = "~/Areas/Admin/Views/Include/_Master.cshtml";
}

<div class="main-container">
    <div class="header-container">
        <div class="header-left-border"></div>
        <h5 class="header font-bold">@ViewBag._Title</h5>
    </div>
    <div class="body-container">
        @if (Model != null)
        {
            <form method="post" id="form1">
                <div class="search-form">
                    <div class="search-form-section">
                        <div class="row">
                            <div class="col-12  p-2">
                                <Label>關鍵字搜尋</Label>
                                <input type="text" class="form-control form-control-lg input-underline" name="txb_Key" value="@ViewBag._Key" />
                            </div>
                        </div>
                    </div>

                    <div class="search-form-section">
                        <div class="row">
                            <div class="d-flex justify-content-end">
                                <a href="javascript:Search();" class="btn btn-primary btn-submit btn-lg btn-round me-2"><i class="fa-solid fa-magnifying-glass"></i>搜尋</a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="table-container">
                    @Html.Action("_TableList", "Include", new { cTL = Model })
                </div>

            </form>
        }
    </div>
</div>
@Html.Action("_RemoveOIAccount", "Include")
<script>
    function AllowJoinGroup(OIID, ACID) {
        $.ajax({
            url: '/Admin/OrganizeSet/AllowJoinGroup?OIID=' + OIID + '&ACID=' + ACID,
            method: 'GET',
            dataType: 'text',
            success: function (res) {
                console.log(res);
                Swal.fire({
                    icon: 'success',
                    html: '已執行落戶'
                }).then(function () {
                    document.getElementById('form1').submit();
                });
            },
            error: function (err) { console.log(err) },
        });
    }
    function EditEmtitle(ACID) {
        $.ajax({
            url: '/Web/GroupPlace/EditEmtitle?ACID=' + ACID,
            method: 'GET',
            dataType: 'text',
            success: function (res) {
                console.log(res);
                if (res == '') {
                    Swal.fire({
                        icon: 'success',
                        html: '已完成會友卡處理'
                    }).then(function () {
                        document.getElementById('form1').submit();
                    });
                }
                else {
                    Swal.fire({
                        icon: 'error',
                        html: res
                    });
                }
            },
            error: function (err) { console.log(err) },
        });
    }
</script>