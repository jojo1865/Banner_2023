@model Banner.Areas.Admin.Controllers.OrganizeSetController.cOrganize_Info_Edit
@{
    ViewBag.Title = "Organize_Info_Edit";
    Layout = "~/Areas/Admin/Views/Include/_Master.cshtml";
}

<div class="main-container">
    <div class="form-container-list">
        <div class="form-container">
            <div class="form-header visually-hidden"><h5>@ViewBag._Title</h5></div>
            @if (Model != null)
            {
                if (Model.OI != null)
                {
                    <form method="post" id="form1">
                        @Html.AntiForgeryToken()
                        <div class="form-body">
                            <div class="form-card-group">
                                <div class="form-card">

                                    @if (Model.OIParent.Count > 0)
                                    {
                                        <div class="form-group">
                                            <label>上層組織<span>*</span></label>
                                            <div class="row">
                                                @foreach (var LS in Model.OIParent.OrderBy(q => q.SortNo))
                                                {
                                                    if (LS == Model.OIParent.OrderByDescending(q => q.SortNo).First())
                                                    {
                                                        <div class="col ps-0" id="@("div_"+LS.SortNo)">
                                                            @Html.DropDownList(LS.ControlName, LS.OIList, new { @class = "form-select form-select-lg", })
                                                        </div>
                                                    }
                                                    else
                                                    {
                                                        <div class="col ps-0" id="@("div_"+LS.SortNo)">
                                                            @Html.DropDownList(LS.ControlName, LS.OIList, new { @class = "form-select form-select-lg", disabled = "disabled" })
                                                        </div>
                                                    }

                                                }
                                            </div>
                                        </div>
                                    }
                                    <div class="form-group">
                                        <label>組織名稱<span>*</span></label>
                                        @Html.TextBox("txb_Title", Model.OI.Title, new { @class = "form-control form-control-lg input-underline " })
                                    </div>
                                    <div class="form-group">
                                        <label>職分主管<span>*</span></label>
                                        @Html.DropDownList("ddl_ACID", Model.ACList, new { @class = "form-select form-select-lg" })
                                    </div>

                                    <div class="form-group">
                                        <label>電話</label>
                                        @Html.TextBox("txb_Phone", Model.C.ContectValue, new { @class = "form-control form-control-lg input-underline " })
                                    </div>

                                    <div class="form-group">
                                        <label>地址</label>
                                        @Html.Action("_Location", "Include", new {LID=Model.L.LID})
                                    </div>

                                    <div class="form-group">
                                        <label>啟用狀態</label>
                                        <div class="row">
                                            <div class="col-auto">
                                                <div class="form-check form-check-inline">
                                                    @Html.RadioButton("cbox_ActiveFlag", true, Model.OI.ActiveFlag, new { @id = "cbox_ActiveFlag1", @class = "form-check-input" })
                                                    @Html.Label("啟用", new { @class = "form-check-label", @for = "cbox_ActiveFlag1" })
                                                </div>
                                            </div>
                                            <div class="col-auto">
                                                <div class="form-check form-check-inline">
                                                    @Html.RadioButton("cbox_ActiveFlag", false, !Model.OI.ActiveFlag, new { @id = "cbox_ActiveFlag2", @class = "form-check-input" })
                                                    @Html.Label("停用", new { @class = "form-check-label", @for = "cbox_ActiveFlag2" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    @if (Model.OI.OIID > 0 && ((bool[])ViewBag._Power)[3] && false)
                                    {
                                        <div class="form-group">
                                            <label>刪除</label>
                                            <div class="row">
                                                <div class="col-auto">
                                                    <div class="form-check form-check-inline">
                                                        @Html.CheckBox("cbox_DeleteFlag", Model.OI.DeleteFlag, new { @class = "form-check-input" })
                                                        @Html.Label("更新後刪除", new { @class = "form-check-label" })
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>

                        </div>
                    </form>
                }
            }
        </div>
    </div>
</div>


<div class="action-bar">
    @if (Model != null)
    {
        if ((((bool[])ViewBag._Power)[1] && Model.OI.OIID == 0) || (((bool[])ViewBag._Power)[2] && Model.OI.OIID > 0))
        {
            <div class="btn btn-primary btn-lg btn-round">
                <a href="javascript:;" onclick="SubmitConfirm();" style="color:white;"><img src="/Areas/Admin/Content/Img/save.svg" alt="" />儲存</a>
            </div>
        }
        <div class="btn btn-outline-primary btn-lg btn-round">
            <a href="/Admin/OrganizeSet/Organize_Info_List/@Model.OI.Organize.ItemID/@Model.OI.OID/0"><img src="/Areas/Admin/Content/Img/cancel.svg" alt="" />取消</a>
        </div>
    }
</div>