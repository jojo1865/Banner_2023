
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Areas/Admin/Views/Include/_Master.cshtml";
}

<div class="main-container">

    <div class="form-container-list">
        <div class="form-container">
            <div class="form-header visually-hidden" ><h5>修改密碼</h5></div>
            <div class="form-body">
                <div class="form-card-group">
                    <div id="info" class="header-container">
                        <div class="header-left-border"></div>
                        <div class="header">修改密碼</div>
                    </div>
                    <form method="post" id="form1">
                        
                        <div class="form-card">
                            <div class="row">
                                <div class="col-10 d-flex">
                                    <div class="form-group" style="flex: 1">
                                        <label>舊密碼<span>*</span></label>
                                        @Html.Password("txb_Old", "",new { @class = "form-control form-control-lg input-underline" })
                                    </div>
                                    <div class="from-group">
                                        <label>&nbsp;</label>
                                        <div class="visibility-container">
                                            <span class="material-icons"
                                                  onclick="togglePasswordVisibility(this,'txb_Old')">
                                                visibility_off
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-10 d-flex">
                                    <div class="form-group" style="flex: 1">
                                        <label>新密碼<span>*</span></label>
                                        @Html.Password("txb_New1", "", new { @class = "form-control form-control-lg input-underline" })
                                    </div>
                                    <div class="from-group">
                                        <label>&nbsp;</label>
                                        <div class="visibility-container">
                                            <span class="material-icons"
                                                  onclick="togglePasswordVisibility(this,'txb_New1')">
                                                visibility_off
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-10 d-flex">
                                    <div class="form-group" style="flex: 1">
                                        <label>再次輸入新密碼<span>*</span></label>
                                        @Html.Password("txb_New2", "", new { @class = "form-control form-control-lg input-underline" })
                                    </div>
                                    <div class="from-group">
                                        <label>&nbsp;</label>
                                        <div class="visibility-container">
                                            <span class="material-icons"
                                                  onclick="togglePasswordVisibility(this,'txb_New2')">
                                                visibility_off
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div>
                                <div class="col-2">
                                    <div class="form-group password-form-group">
                                        <label>&nbsp;</label>
                                        <div class="chg-pwd-container">
                                            <button class="form-control btn btn-primary btn-submit btn-round" onclick="CheckInput(@ViewBag._UserID);">
                                                變更密碼
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
