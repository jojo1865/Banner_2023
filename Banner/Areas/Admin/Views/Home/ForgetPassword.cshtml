
@{
    Layout = "~/Areas/Admin/Views/Include/_MasterLogin.cshtml";
}

<h2>忘記密碼</h2>
<form method="post">
    @Html.AntiForgeryToken()

    <div class="nav nav-tabs" id="nav-tab" role="tablist">
        <button class="nav-link active" id="tab_1" data-bs-toggle="tab" data-bs-target="#tab_1_space" type="button" role="tab" aria-controls="tab_2_space" aria-selected="true">Email</button>
        <button class="nav-link" id="tab_2" data-bs-toggle="tab" data-bs-target="#tab_2_space" type="button" role="tab" aria-controls="tab_2_space" aria-selected="false">手機</button>
    </div>
    <div class="tab-content" id="div_Tab">
        <div class="tab-pane fade show active" id="tab_1_space" role="tabpanel" aria-labelledby="tab_1" tabindex="0">
            Email:<input name="txb_Email" placeholder="Email" type="email" value="@ViewBag._Temp1" />
            <button name="btn_SendEmail" type="submit">取得新密碼</button>
            <a href="/Admin/Home/Login">返回登入</a>
        </div>
        <div class="tab-pane fade" id="tab_2_space" role="tabpanel" aria-labelledby="tab_2" tabindex="1">
            手機號碼:<input name="txb_CellPhone" placeholder="您的手機號碼" value="@ViewBag._Temp2" />
            <button name="btn_SendPhone" type="submit">取得新密碼</button>
            <a href="/Admin/Home/Login">返回登入</a>
        </div>
    </div>
</form>
