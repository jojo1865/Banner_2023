
@{
    ViewBag.Title = "ProductAllowAccount_List";
    Layout = "~/Areas/Admin/Views/Include/_Master.cshtml";
}

<div class="main-container">
    <div class="header-container">
        <div class="header-left-border"></div>
        <h5 class="header font-bold">@ViewBag._Title</h5>
    </div>
    <div class="body-container">
        <form method="post" id="form1">
            @if (Model != null)
            {
                <div class="search-form">
                    <div class="search-form-section">
                        <div class="row">
                            <div class="col-lg-3 col-12">
                                <label>會員資料匯入</label>
                                <input type="file" id="uf_AccountFile" name="uf_AccountFile" class="form-control">
                            </div>
                            <div class="col-lg-3 col-12">
                                <label>格式下載</label>
                                <a href="" download class="btn btn-primary btn-lg btn-submit btn-round btn-submit me-2"><i class="fa-solid fa-download"></i>下載</a>
                            </div>
                            <div class="col-lg-3 col-12">
                                <a href="javascript:;" onclick="document.getElementById('form1').submit();" class="btn btn-primary btn-lg btn-submit btn-round btn-submit me-2"><i class="fa-solid fa-magnifying-glass"></i>上傳</a>
                            </div>
                        </div>




                        <div class="row">
                            <div class="col-lg-6 col-12">
                                <div class="form-control-lg">
                                    <label>姓名：</label>

                                </div>
                            </div>
                            <div class="col-lg-6 col-12 text-lg-end text-center">
                                <a href="javascript:;" onclick="document.getElementById('form1').submit();" class="btn btn-primary btn-lg btn-submit btn-round btn-submit me-2"><i class="fa-solid fa-magnifying-glass"></i>搜尋</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="table-container">
                    @if (((bool[])ViewBag._Power)[1])
                    {
                        <div class="table-func-container mb-4">
                            <a class="btn btn-primary btn-lg btn-round" href="/Admin/StoreSet/Product_Edit/0">
                                <i class="fa-solid fa-circle-plus"></i>新增
                            </a>
                        </div>
                    }
                    @Html.Action("_TableList", "Include", new { cTL = Model.cTL })
                </div>
            }

        </form>
    </div>
</div>