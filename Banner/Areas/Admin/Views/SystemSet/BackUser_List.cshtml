@model Banner.Areas.Admin.Controllers.SystemSetController.cBackUser_List
@{
    Layout = "~/Areas/Admin/Views/Include/_Master.cshtml";
}
<!--帳號管理-->
<div class="main-container">
    <div class="header-container">
        <div class="header-left-border"></div>
        <h5 class="header font-bold">@ViewBag._Title</h5>
    </div>
    <div class="body-container">
        <form method="post" id="form1">
            @Html.AntiForgeryToken()
            @if (Model != null)
            {
                <div class="search-form">
                    <div class="search-form-section">
                        <div class="row">
                            @foreach (var LS in Model.LS)
                            {
                                <div class="col-6 p-2">
                                    <Label>@LS.Title</Label>
                                    @Html.DropDownList(LS.ControlName, LS.ddlList, new { @class = "form-select form-select-lg", @onchange = "GetOIddl(this);" })
                                </div>
                            }
                        </div>
                        <div class="row">
                            <div class="col-6  p-2">
                                <Label>姓名</Label>
                                @Html.TextBox("txb_Name", @Model.Name,new { @class = "form-control form-control-lg input-underline" })

                            </div>
                            <div class="col-6  p-2">
                                <Label>帳號</Label>
                                @Html.TextBox("txb_Account", @Model.Account, new { @class = "form-control form-control-lg input-underline" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6  p-2">
                                <Label>行動電話</Label>
                                @Html.TextBox("txb_CellPhone", @Model.CellPhone, new { @class = "form-control form-control-lg input-underline" })
                            </div>
                            <div class="col-6  p-2">
                                <Label>性別</Label>
                                <div class="form-control-lg">
                                    @Html.RadioButton("rbl_Sex", 0, (Model.Sex == 0), new { @class = "form-check-input" })
                                    @Html.Label("全部")
                                    @Html.RadioButton("rbl_Sex", 1, (Model.Sex == 1), new { @class = "form-check-input" })
                                    @Html.Label("男")
                                    @Html.RadioButton("rbl_Sex", 2, (Model.Sex == 2), new { @class = "form-check-input" })
                                    @Html.Label("女")
                                </div>

                            </div>
                        </div>
                    </div>

                    <div class="search-form-section">
                        <div class="row">
                            <div class="d-flex justify-content-end">
                                <a href="javascript:;" onclick="document.getElementById('form1').submit();" class="btn btn-primary btn-lg btn-round btn-submit me-2">搜尋</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="table-container">
                    @Html.Action("_TableList", "Include", new { cTL = Model.cTL })
                </div>
            }
        </form>
    </div>
</div>

