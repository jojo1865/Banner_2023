@model Banner.Areas.Admin.Controllers.SystemSetController.cMenu_List
@{
    ViewBag.Title = "Menu_List";
    Layout = "~/Areas/Admin/Views/Include/_Master.cshtml";
}
<!--選單管理-->
<div class="main-container">
    <div class="header-container">
        <div class="header-left-border"></div>
        <h5 class="header font-bold">@ViewBag._Title</h5>
    </div>
    <div class="body-container">
        <form method="post" id="form1">
            @if (Model != null)
            {
                <div class="search-form">
                    <div class="search-form-section">
                        <div class="row">
                            <div class="col-xxl-4 col-lg-6 col-12">
                                <div class="form-control-lg">
                                    <label>選單類別</label><br />
                                    @Html.RadioButton("rbl_MenuType", 0, (Model.MenuType == 0), new { @class = "form-check-input" })
                                    @Html.Label("後台選單")
                                    @Html.RadioButton("rbl_MenuType", 1, (Model.MenuType == 1), new { @class = "form-check-input" })
                                    @Html.Label("前台選單")
                                </div>
                            </div>
                            <div class="col-xxl-4 col-lg-6 col-12">
                                <div class="form-control-lg">
                                    <label>啟用狀態</label><br />
                                    @Html.RadioButton("rbl_ActiveFlag", -1, (Model.ActiveFlag == -1), new { @class = "form-check-input" })
                                    @Html.Label("全部")
                                    @Html.RadioButton("rbl_ActiveFlag", 1, (Model.ActiveFlag == 1), new { @class = "form-check-input" })
                                    @Html.Label("已啟用")
                                    @Html.RadioButton("rbl_ActiveFlag", 0, (Model.ActiveFlag == 0), new { @class = "form-check-input" })
                                    @Html.Label("關閉中")
                                </div>
                            </div>
                            <div class="col-xxl-4 col-lg-6 col-12">
                                <div class="form-control-lg text-lg-end text-center">

                                    <a href="javascript:;" onclick="document.getElementById('form1').submit();" class="btn btn-primary btn-lg btn-round btn-submit me-2"><i class="fa-solid fa-magnifying-glass"></i>搜尋</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="table-container">
                    @if (((bool[])ViewBag._Power)[2])
                    {
                        <div class="table-func-container mb-4">
                            <a href="javascript:;" onclick="document.getElementById('form1').submit();" class="btn btn-primary btn-lg btn-round btn-submit me-2"><i class="fa-solid fa-sort"></i>更新排序</a>
                        </div>
                    }
                    @Html.Action("_TableList", "Include", new { cTL = Model.cTL })
                </div>
            }
        </form>
    </div>
</div>

