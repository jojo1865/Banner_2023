@model Banner.Areas.Admin.Controllers.SystemSetController.cMenu_Edit
@{
    Layout = "~/Areas/Admin/Views/Include/_Master.cshtml";
}

<div class="main-container">
    <div class="form-container-list">
        <div class="form-container">
            <div class="form-header visually-hidden"><h5>@ViewBag._Title</h5></div>
            @if (Model != null)
            {
                <form method="post" id="form1">
                    
                    <div class="form-body">
                        <div class="form-card-group">
                            <div class="form-card">
                                <div class="form-group">
                                    <label>上層選單</label>
                                    @Html.Label(Model.PName, new { @class = "form-control form-control-lg input-underline lab_gray" })
                                </div>
                                <div class="form-group">
                                    <label>選單類別</label>
                                    @Html.Label(Model.PMenuType, new { @class = "form-control form-control-lg input-underline lab_gray" })
                                </div>
                                <div class="form-group">
                                    <label>選單名稱<span>*</span></label>
                                    @Html.TextBox("txb_Title", Model.M.Title, new { @class = "form-control form-control-lg input-underline", @required = string.Empty })
                                </div>
                                <div class="form-group">
                                    <label>選單網址</label>
                                    @Html.TextBox("txb_URL", Model.M.URL, new { @class = "form-control form-control-lg input-underline" })
                                </div>

                                <div class="form-group">
                                    <label>啟用狀態</label>
                                    <div class="row">
                                        <div class="col-auto">
                                            <div class="form-check form-check-inline">
                                                @Html.RadioButton("cbox_ActiveFlag", true, Model.M.ActiveFlag, new { @id = "cbox_ActiveFlag1", @class = "form-check-input" })
                                                @Html.Label("啟用", new { @class = "form-check-label", @for = "cbox_ActiveFlag1" })
                                            </div>
                                        </div>
                                        <div class="col-auto">
                                            <div class="form-check form-check-inline">
                                                @Html.RadioButton("cbox_ActiveFlag", false, !Model.M.ActiveFlag, new { @id = "cbox_ActiveFlag2", @class = "form-check-input" })
                                                @Html.Label("停用", new { @class = "form-check-label", @for = "cbox_ActiveFlag2" })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                @if (Model.M.MID > 0 && ((bool[])ViewBag._Power)[3] && false)
                                {
                                    <div class="form-group">
                                        <label>刪除</label>
                                        <div class="row">
                                            <div class="col-auto">
                                                <div class="form-check form-check-inline">
                                                    @Html.CheckBox("cbox_DeleteFlag", Model.M.DeleteFlag, new { @class = "form-check-input" })
                                                    @Html.Label("更新後刪除", new { @class = "form-check-label" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>

                        <div class="row text-center">
                            <div class="col m-3">
                                @if ((((bool[])ViewBag._Power)[1] && Model.M.MID == 0) || (((bool[])ViewBag._Power)[2] && Model.M.MID > 0))
                                {
                                    <a href="javascript:;" onclick="SubmitConfirm();" class="btn_Basic btn btn-primary btn-sm btn-round"><i class="fa-solid fa-floppy-disk"></i>儲存</a>
                                }
                                <a href="/Admin/SystemSet/Menu_List" class="btn_Basic btn btn-outline-primary btn-sm btn-round"><i class="fa-solid fa-arrow-rotate-left"></i>返回列表</a>
                            </div>
                        </div>
                    </div>
                </form>
            }
        </div>
    </div>
</div>

