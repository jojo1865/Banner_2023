@model Banner.Areas.Admin.Controllers.MeetingLocationController.cJoinCt_Edit
@{
    ViewBag.Title = "JoinCt_Edit";
    Layout = "~/Areas/Admin/Views/Include/_Master.cshtml";
}

<div class="main-container">
    <div class="form-container-list">
        <div class="form-container">
            <div class="form-header visually-hidden"><h5>@ViewBag._Title</h5></div>
            @if (Model != null)
            {
                <form method="post" id="form1">
                    
                    <div class="form-body">
                        <div class="form-card-group">
                            <div class="form-card">
                                <div class="form-group">
                                    <label>活動主題</label>
                                    @Html.TextBox("txb_Title", Model.ML.Title, new { @class = "form-control form-control-lg input-underline" })
                                </div>
                                <div class="form-group">
                                    <label>聚會點</label>
                                    @Html.DropDownList("ddl_ML", Model.MLS_SL, new { @class = "form-select form-select-lg" })
                                </div>
                                <div class="form-group">
                                    <label>聚會日期</label>
                                    @Html.TextBox("txb_S_Date", Model.ML.S_DateTime.ToString("yyyy-MM-dd"), new { @class = "form-control form-control-lg input-underline", type = "date" })
                                </div>
                                <div class="form-group">
                                    <label>活動時間</label>
                                    <div class="row">
                                        <div class="col-auto">
                                            <div class="form-check form-check-inline">
                                                @Html.TextBox("txb_S_Time", Model.ML.S_DateTime.ToString("HH:mm"), new { @class = "form-control form-control-lg input-underline", type = "time" })
                                            </div>
                                        </div>
                                        <div class="col-auto">
                                            <div class="form-check form-check-inline">
                                                @Html.Label("~", new { @class = "form-check-label" })
                                            </div>
                                        </div>
                                        <div class="col-auto">
                                            <div class="form-check form-check-inline">
                                                @Html.TextBox("txb_E_Time", Model.ML.E_DateTime.ToString("HH:mm"), new { @class = "form-control form-control-lg input-underline", type = "time" })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label>參加人數</label>
                                    <div class="row">
                                        <div class="col-auto">
                                            <div class="form-check form-check-inline">
                                                <label>兒童</label>
                                                @Html.TextBox("txb_JoinCt_Child", Model.ML.JoinCt_Child.ToString(), new { @class = "form-control form-control-lg input-underline", type = "number" })
                                            </div>
                                        </div>
                                        <div class="col-auto">
                                            <div class="form-check form-check-inline">
                                                <label>青年</label>
                                                @Html.TextBox("txb_JoinCt_Juiner", Model.ML.JoinCt_Juiner.ToString(), new { @class = "form-control form-control-lg input-underline", type = "number" })
                                            </div>
                                        </div>
                                        <div class="col-auto">
                                            <div class="form-check form-check-inline">
                                                <label>成人</label>
                                                @Html.TextBox("txb_JoinCt_Aldult", Model.ML.JoinCt_Aldult.ToString(), new { @class = "form-control form-control-lg input-underline", type = "number" })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label>備註</label>
                                    @Html.TextArea("txb_Note", Model.ML.Note, new { @class = "form-control form-control-lg", @style = "hight:100px;" })
                                </div>

                                @if (Model.ML.MLUID > 0 && ((bool[])ViewBag._Power)[3])
                                {
                                    <div class="form-group">
                                        <label>刪除</label>
                                        <div class="row">
                                            <div class="col-auto">
                                                <div class="form-check form-check-inline">
                                                    @Html.CheckBox("cbox_DeleteFlag", Model.ML.DeleteFlag, new { @class = "form-check-input" })
                                                    @Html.Label("更新後刪除", new { @class = "form-check-label" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </form>
            }
        </div>
    </div>
</div>

<div class="action-bar">
    @if (Model != null)
    {
        if ((((bool[])ViewBag._Power)[1] && Model.ML.MLUID == 0) || (((bool[])ViewBag._Power)[2] && Model.ML.MLUID > 0))
        {
            <a href="javascript:;" onclick="SubmitConfirm();" style="color:white;" class="btn btn-primary btn-submit btn-lg btn-round btn-submit">
                <i class="fa-solid fa-floppy-disk"></i>儲存
            </a>
        }
        <a href="/Admin/MeetingLocation/JoinCt_List" class="btn btn-outline-primary btn-lg btn-round">
            <i class="fa-solid fa-xmark"></i>取消
        </a>
    }
</div>

