@model Banner.Areas.Admin.Controllers.EventSetController.cEvent_List
@{
    ViewBag.Title = "Event_List";
    Layout = "~/Areas/Admin/Views/Include/_Master.cshtml";
}

<div class="main-container">
    <div class="header-container">
        <div class="header-left-border"></div>
        <h5 class="header font-bold">@ViewBag._Title</h5>
    </div>
    <div class="body-container">
        <form method="post" id="form1">
            @if (Model != null)
            {
                <div class="search-form">
                    <div class="search-form-section">
                        @if (Model.CID == 1)
                        {
                            <div class="row">
                                <div class="col-lg-6 col-12">
                                    <label>聚會點</label>
                                    @Html.DropDownList("ddl_M", Model.EC_SL, new { @class = "form-select form-control-lg" })
                                </div>
                                <div class="col-lg-6 col-12">
                                    <label>活動名稱</label>
                                    @Html.TextBox("txb_Key", Model.sKey, new { @class = "form-control form-control-lg input-underline", @placeholder = "聚會名稱關鍵字" })
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="row">
                                <div class="col-lg-6 col-12">
                                    <label>活動名稱</label>
                                    @Html.TextBox("txb_Key", Model.sKey, new { @class = "form-control form-control-lg input-underline", @placeholder = "活動名稱關鍵字" })
                                </div>
                                <div class="col-lg-6 col-12">
                                    
                                </div>
                            </div>
                        }

                        <div class="row">
                            <div class="col-lg-6 col-12">
                                <div class="form-control-lg">
                                    <label>狀態：</label>
                                    @Html.RadioButton("rbl_ActiveType", -1, (Model.ActiveType == -1), new { @class = "form-check-input" })
                                    @Html.Label("全部")
                                    @Html.RadioButton("rbl_ActiveType", 1, (Model.ActiveType == 1), new { @class = "form-check-input" })
                                    @Html.Label("啟用")
                                    @Html.RadioButton("rbl_ActiveType", 0, (Model.ActiveType == 0), new { @class = "form-check-input" })
                                    @Html.Label("停用")
                                </div>
                            </div>
                            <div class="col-lg-6 col-12 text-lg-end text-center">
                                <a href="javascript:;" onclick="document.getElementById('form1').submit();" class="btn btn-primary btn-lg btn-submit btn-round btn-submit me-2"><i class="fa-solid fa-magnifying-glass"></i>搜尋</a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="table-container">
                    @if (((bool[])ViewBag._Power)[1])
                    {
                        <div class="table-func-container mb-4">
                            <a class="btn btn-primary btn-lg btn-round" href="/Admin/EventSet/Event_Edit/0?CID=@Model.CID">
                                <i class="fa-solid fa-circle-plus"></i>新增
                            </a>
                        </div>
                    }

                    @Html.Action("_TableList", "Include", new { cTL = Model.cTL })

                </div>
            }
        </form>
    </div>
</div>

