@model Banner.Account_Note
@{
    ViewBag.Title = "GroupLeaderIndex";
    Layout = "~/Areas/Web/Views/Include/_Master.cshtml";
}
<style>
    .section-card {
        display: flex;
        flex-direction: column;
        padding: 24px;
        gap: 16px;
    }
</style>
<div class="body-container">
    <div class="section-container">
        <nav class="breadcrumb-nav">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/Web/GroupPlace/Index/@ViewBag._OIID">小組資訊</a></li>
                <li><img src="/Areas/Web/Content/img/right.svg" alt="" /></li>
                <li class="breadcrumb-item"><a href="/Web/GroupPlace/New_List/@ViewBag._OIID">新人名單</a></li>
                <li><img src="/Areas/Web/Content/img/right.svg" alt="" /></li>
                <li class="breadcrumb-item"><a href="">駁回</a></li>
            </ol>
        </nav>
        <div class="header-container">
            <div class="header-left-border"></div>
            <h5 class="header">@Html.Raw(TempData["GroupTitle"]) - 駁回</h5>
        </div>
        @Html.Action("_GroupTopMenu", "Include")
        <div class="container-lg">
            <div class="section-card">
                <form method="post" id="form1">


                    <div class="form-group">
                        <label>組員名稱</label>
                        @Html.Label((Model.Account != null ? Model.Account.Name_First + Model.Account.Name_Last : ""), new { @class = "form-control form-control-lg input-underlin lab_gray" })
                    </div>
                    <div class="form-group">
                        <label>駁回原因</label>
                        @Html.TextArea("txb_Note", Model.Note, new { @class = "form-control form-control-lg input-underlin", maxlength = "200", @style = "height:250px" })
                    </div>
                    <div class="form-group ">
                        <label>其他設定</label><br />
                        @Html.CheckBox("cbox_NoIntention", false, new { @class = "form-check-input" })
                        @Html.Label("此人無意願繼續加入小組", new { @for = "cbox_NoIntention", @class = "form-check-label" })
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>
<div class="action-bar">
    @if (Model != null)
    {
        <div class="btn btn-primary btn-lg btn-round">
            <a href="javascript:;" onclick="SubmitConfirm();" style="color:white;"><img src="/Areas/Web/Content/Img/save.svg" alt="" />儲存</a>
        </div>
        <div class="btn btn-outline-primary btn-lg btn-round">
            <a href="/Web/GroupPlace/New_List/@Model.OIID"><img src="/Areas/Web/Content/Img/cancel.svg" alt="" />取消</a>
        </div>
    }
</div>