@model List<Banner.Models.cMenu>
@{
    if (Model != null)
    {
        if (Model.Count() > 0)
        {
            <div class="tabs">
                @foreach (var M in Model)
                {
                    <div class="tab @(M.SelectFlag ? "active" : "")">
                        <a href="@M.Url">
                            <img src="@M.ImgUrl" alt="@M.Title" />@M.Title
                        </a>
                    </div>
                }
            </div>
            if (Model[1].SelectFlag)
            {
                <div class="sub-tabs">
                    <div class="tab">
                        @foreach (var M in Model[1].Items)
                        {
                            if (M.SelectFlag)
                            {
                                <a class="btn btn-primary btn-sm btn-round" href="@M.Url">@M.Title</a>
                            }
                            else
                            {
                                <a class="btn btn-outline-primary btn-sm btn-round" href="@M.Url">@M.Title</a>
                            }
                        }
                    </div>
                </div>
            }
        }
    }
}
