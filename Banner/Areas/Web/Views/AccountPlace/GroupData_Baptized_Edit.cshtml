@model Banner.Baptized
@{
    ViewBag.Title = "GroupLeaderIndex";
    Layout = "~/Areas/Web/Views/Include/_Master.cshtml";
}
<div class="body-container">
    <div class="section-container">
        <nav class="breadcrumb-nav">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/Web/AccountPlace/GroupData_Index">小組資訊</a></li>
                <li><img src="/Areas/Web/Content/img/right.svg" alt="" /></li>
                <li class="breadcrumb-item"><a href="/Web/AccountPlace/GroupData_Aldult_List">組員名單管理</a></li>
                <li><img src="/Areas/Web/Content/img/right.svg" alt="" /></li>
                <li class="breadcrumb-item"><a href="/Web/AccountPlace/GroupData_Baptized_List">待受洗名單</a></li>
                <li><img src="/Areas/Web/Content/img/right.svg" alt="" /></li>
                <li class="breadcrumb-item"><a href="">設定受洗日期</a></li>
            </ol>
        </nav>
        <div class="header-container">
            <div class="header-left-border"></div>
            <h5 class="header">@Html.Raw(ViewBag._GroupTitle) - 設定受洗日期</h5>
        </div>
        @Html.Action("_GroupTopMenu", "Include")
        <div class="container">
            <div class="section-card">
                <form method="post" id="form1">
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        <label>組員名稱</label>
                        @Html.Label((Model.Account != null ? Model.Account.Name : ""), new { @class = "form-control form-control-lg input-underlin lab_gray" })
                    </div>
                    <div class="form-group">
                        <label>預定受洗日期</label>
                        @Html.TextBox("txb_BaptismDate", Model.BaptismDate.ToString("yyyy-MM-dd"), new { @class = "form-control form-control-lg input-underline", @type = "date" })
                    </div>

                </form>
            </div>
        </div>

    </div>
</div>
<div class="action-bar">
    @if (Model != null)
    {
        if ((((bool[])ViewBag._Power)[1] && Model.BID == 0) || (((bool[])ViewBag._Power)[2] && Model.BID > 0) || true)
        {
            <a href="javascript:;" onclick="SubmitConfirm();" style="color:white;" class="btn btn-primary btn-lg btn-round btn-submit"><img src="/Areas/Web/Content/Img/save.svg" alt="" />儲存</a>
        }

        <a href="/Web/AccountPlace/GroupData_Baptized_List" class="btn btn-outline-primary btn-lg btn-round"><img src="/Areas/Web/Content/Img/cancel.svg" alt="" />取消</a>
    }
</div>