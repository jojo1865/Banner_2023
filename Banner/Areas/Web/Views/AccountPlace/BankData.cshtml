@model Banner.Areas.Web.Controllers.AccountPlaceController.cBankData
@{
    ViewBag.Title = "BankData";
    Layout = "~/Areas/Web/Views/Include/_Master.cshtml";
}

<style>
    main {
        padding: 0;
        position: relative;
    }

    .section-card {
        display: flex;
        flex-direction: column;
        padding: 24px;
        gap: 16px;
    }

    .header-container {
        margin-top: 32px;
    }

        .header-container:first-child {
            margin-top: 0;
        }

    .btn-verify-phone,
    .btn-verify-email {
        margin-top: 6px;
    }

    .action-bar {
        width: 100%;
    }

    .alertbtn {
        line-height: 4px !important;
    }
</style>
<div class="body-container" style="height: calc(100vh - 164px); padding-bottom:84px;">
    <div class="section-container">

        <form method="post" id="form1" style="width:80%;">
            @Html.AntiForgeryToken()

            <div class="row w-100">
                <div class="col-12">
                    <div class="form-card-group">
                        <div class="header-container no-border">
                            <div class="header-left-border"></div>
                            <h5 class="header font-bold">退款費用專用帳戶</h5>
                        </div>
                        <div class="section-card">
                            <div class="form-group">
                                <label>戶名</label>
                                @Html.TextBox("txb_Title", Model.AB.Title, new { @class = "form-control form-control-lg input-underline" })
                            </div>
                            <div class="form-group">
                                <label>銀行代號</label>
                                @Html.DropDownList("ddl_BID", Model.SLI, new { @class = "form-select form-select-lg" })
                            </div>
                            <div class="form-group">
                                <label>分行代號</label>
                                @Html.TextBox("txb_BankNo", Model.AB.BankNo, new { @class = "form-control form-control-lg input-underline" })
                            </div>
                            <div class="form-group">
                                <label>銀行帳戶</label>
                                @Html.TextBox("txb_AccountNo", Model.AB.AccountNo, new { @class = "form-control form-control-lg input-underline" })
                            </div>
                            <div class="text-end">
                                <span class="lab_DarkBlue">若當初支付方式為現金或匯款一率採取匯款退費</span>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </form>
    </div>


</div>
<div class="action-bar">
    <a href="javascript:;" onclick="SubmitConfirm();" style="color:white;" class="btn btn-primary btn-lg btn-round btn-submit"><img src="/Areas/Web/Content/Img/save.svg" alt="" />儲存</a>
    <a href="/Web/AccountPlace/BankData" class="btn btn-outline-primary btn-lg btn-round"><img src="/Areas/Web/Content/Img/cancel.svg" alt="" />取消</a>
</div>
