@model Banner.Areas.Web.Controllers.AccountAddController.cStep1
@{
    ViewBag.Title = "Step1";
    Layout = "~/Areas/Web/Views/Include/_MasterAccountAdd.cshtml";
}
<style>
    span.circle-on {
        font-family: Courier, Arial;
        font-size: 18px;
        -webkit-border-radius: 40px;
        -moz-border-radius: 40px;
        border-radius: 40px;
        background-color: rgb(12, 49, 118);
        border: 3px solid rgb(12, 49, 118);
        color: #fff;
        display: block;
        float: left;
        height: 45px;
        padding: 7px 8px 13px 8px;
        text-align: center;
        vertical-align: top;
        width: 45px;
    }

    span.circle-off {
        font-family: Courier, Arial;
        font-size: 18px;
        -webkit-border-radius: 40px;
        -moz-border-radius: 40px;
        border-radius: 40px;
        background-color: #CCC;
        border: 3px solid #CCC;
        color: #fff;
        display: block;
        float: left;
        height: 45px;
        padding: 7px 8px 13px 8px;
        text-align: center;
        vertical-align: top;
        width: 45px;
    }

    div.topbar-on-xl {
        height: 3px;
        max-width: 180px;
        background-color: rgb(12, 49, 118);
        margin-top: 20px;
    }

    div.topbar-off-xl {
        height: 3px;
        width: 180px;
        background-color: #CCC;
        margin-top: 20px;
    }

    div.topbar-on {
        height: 3px;
        max-width: 80px;
        background-color: rgb(12, 49, 118);
        margin-top: 20px;
    }

    div.topbar-off {
        height: 3px;
        width: 80px;
        background-color: #CCC;
        margin-top: 20px;
    }

    .form-control-lg {
        min-height: 0 !important;
    }

    label {
        font-size: 1.25rem;
    }
</style>
<!--上方步驟-->
<div class="row p-xxl-5 p-2 mt-4 justify-content-md-center">
    <div class="col-sm-auto col p-0">
        <span class="circle-on">1</span>
    </div>
    <div class="col-sm-auto col p-0">
        <div class="topbar-off-xl d-xl-block d-none"></div>
        <div class="topbar-off d-xl-none d-sm-block d-none"></div>
    </div>
    <div class="col-sm-auto col p-0">
        <span class="circle-off">2</span>
    </div>
    <div class="col-sm-auto col p-0">
        <div class="topbar-off-xl d-xl-block d-none"></div>
        <div class="topbar-off d-xl-none d-sm-block d-none"></div>
    </div>
    <div class="col-sm-auto col p-0">
        <span class="circle-off">3</span>
    </div>
    <div class="col-sm-auto col p-0">
        <div class="topbar-off-xl d-xl-block d-none"></div>
        <div class="topbar-off d-xl-none d-sm-block d-none"></div>
    </div>
    <div class="col-sm-auto col p-0">
        <span class="circle-off">4</span>
    </div>
    <div class="col-sm-auto col p-0">
        <div class="topbar-off-xl d-xl-block d-none"></div>
        <div class="topbar-off d-xl-none d-sm-block d-none"></div>
    </div>
    <div class="col-sm-auto col p-0">
        <span class="circle-off">5</span>
    </div>
</div>
<div class="row justify-content-md-center">

    <div class="col-lg-8 col">
        <div class="row">
            <div class="col-auto">
                <div style="width: 10px; background-color: rgb(12, 49, 118); height:32px;"></div>
            </div>
            <div class="col-auto">
                <label>個人基本資料<span>*</span></label>
            </div>
        </div>
        <div class="row">
            <div class="col pt-2">
                <div style="height: 5px; background-color: rgb(12, 49, 118); "></div>
            </div>
        </div>
        <div class="row justify-content-md-center">
            <div class="col">
                <form id="form1" method="post" class="needs-validation" novalidate>
                    @Html.AntiForgeryToken()
                    <div class="row mt-2">
                        <div class="col mt-3">
                            <label>帳號</label>
                            @if (Model.Login != "")
                            {
                                <span class="orm-control form-control-lg input-underline lab_gray">@Model.Login</span>
                                <div class="d-none">
                                    @Html.TextBox("txb_Login", Model.Login)
                                    @Html.CheckBox("cbox_Login_Success", true)
                                </div>
                            }
                            else
                            {
                                @Html.TextBox("txb_Login", Model.Login, new { @class = "form-control form-control-lg input-underline", @placeholder = "請輸入帳號", required = string.Empty, onchange = "checkLogin(this);" })
                                <div class="d-none">
                                    @Html.CheckBox("cbox_Login_Success")
                                </div>
                            }

                        </div>

                        <div class="col-12 text-end" id="div_Login"></div>
                    </div>
                    <div class="row mt-2">
                        <div class="col d-flex">
                            <div class="form-group" style="flex: 1">
                                <label>密碼</label>
                                @Html.Password("txb_PW1", "", new { @class = "form-control form-control-lg input-underline", @placeholder = "請輸入8~12個英數字元", required = string.Empty, onchange = "CheckPassword();" })
                            </div>
                            <div class="from-group">
                                <label>&nbsp;</label>
                                <div class="visibility-container">
                                    <span class="material-icons"
                                          onclick="togglePasswordVisibility(this,'txb_PW1')">
                                        visibility_off
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="d-none">
                            @Html.CheckBox("cbox_PW_Success")
                        </div>
                        <div class="col-12 text-end" id="div_PW1"></div>
                    </div>
                    <div class="row mt-2">
                        <div class="col d-flex">
                            <div class="form-group" style="flex: 1">
                                <label>確認密碼</label>
                                @Html.Password("txb_PW2", "", new { @class = "form-control form-control-lg input-underline", @placeholder = "請再次確認密碼", required = string.Empty, onchange = "CheckPassword();" })
                            </div>
                            <div class="from-group">
                                <label>&nbsp;</label>
                                <div class="visibility-container">
                                    <span class="material-icons"
                                          onclick="togglePasswordVisibility(this,'txb_PW2')">
                                        visibility_off
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 text-end" id="div_PW2"></div>
                    </div>
                    <div class="row mt-2">
                        <div class="col mt-3">
                            <label>手機號碼</label>
                            @Html.Action("_ContectEdit", "Include", new { C = new Contect { ContectType = 1, ContectValue = Model.CellPhone, ZID = Model.ZID }, required = true })
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col mt-3">
                            <label>Email</label>
                            @Html.Action("_ContectEdit", "Include", new { C = new Contect { ContectType = 2, ContectValue = Model.Email }, required = true })
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col mt-3">
                            <label>姓名</label>
                            <div class="row">
                                <div class="col-4">
                                    @Html.TextBox("txb_Name_First", Model.Name_F, new { @class = "form-control form-control-lg input-underline", @placeholder = "姓", required = string.Empty })
                                </div>
                                <div class="col-8">
                                    @Html.TextBox("txb_Name_Last", Model.Name_L, new { @class = "form-control form-control-lg input-underline", @placeholder = "名", required = string.Empty })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col mt-3">
                            <label>性別</label><br />
                            <div class="form-check form-check-inline">
                                @Html.RadioButton("cbox_Sex", true, Model.Sex, new { @id = "cbox_Sex1", @class = "form-check-input", required = string.Empty })
                                @Html.Label("男", new { @class = "form-check-label", @for = "cbox_Sex1" })
                            </div>
                            <div class="form-check form-check-inline">
                                @Html.RadioButton("cbox_Sex", false, !Model.Sex, new { @id = "cbox_Sex2", @class = "form-check-input", required = string.Empty })
                                @Html.Label("女", new { @class = "form-check-label", @for = "cbox_Sex2" })
                            </div>
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col mt-3">
                            <label>出生年月日(西元)</label>
                            @Html.TextBox("txb_Birthday", Model.sBD, new { @class = "form-control form-control-lg input-underline", @placeholder = "YYYY-MM-DD", @onfocus = "(this.type='date')", @onblur = "(this.type='text')", required = string.Empty })
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col mt-3 mb-5 text-center">
                            <button type="submit" style="color:white;" class="btn btn-primary btn-lg btn-round btn-submit"><img src="/Areas/Web/Content/Img/save.svg" alt="" />下一步</button>

                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>